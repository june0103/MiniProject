<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mini02_BoardProject02" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- 모든 UI 요소의 기본 색상 -->
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <!-- 상단 상태바 색상 -->
        <item name="colorPrimaryDark">@color/material_dynamic_tertiary99</item>
        <!-- 상태바의 색상이 밝은색 이므로 그에 맞는 색상으로 정보를 보여줄수 있도록 -->
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="Theme.Mini02_BoardProject02" parent="Base.Theme.Mini02_BoardProject02" />


    <style name="Theme.Mini02.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorPrimary">@color/material_dynamic_tertiary99</item>

    </style>


    
    <!-- splash screen -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon</item>
<!--        <item name="windowSplashScreenAnimatedIcon">@mipmap/aaa</item>-->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Mini02_BoardProject02</item>
    </style>
    
</resources>